@article{Petrova.2011,
 abstract = {A novel antibiotic and chromate resistance transposon, Tn5045, was isolated from a permafrost strain of Pseudomonas sp. Tn5045 is a compound transposon composed of three distinct genetic elements. The backbone element is a Tn1013-like Tn3 family transposon, termed Tn1013$\ast$, that contains the tnpA and the tnpR genes, encoding the transposase and resolvase, respectively, the res-site and four genes (orfA, B, C, D) related to different house-keeping genes. The second element is class 1 integron, termed InC$\ast$, which is inserted into the Tn1013$\ast$ res-region and contains 5'-CS-located integrase, 3'-CS-located qacE∆1 and sulfonamide resistance sulI genes, and a single cassette encoding the streptomycin resistance aadA2-gene. The third element is a TnOtChr-like Tn3 family transposon termed TnOtChr$\ast$, which is inserted into the transposition module of the integron and contains genes of chromate resistance (chrB, A, C, F). Tn5045 is the first example of an ancient integron-containing mobile element and also the first characterized compound transposon coding for both antibiotic and chromate, resistance. Our data demonstrate that antibiotic and chromate resistance genes were distributed in environmental bacteria independently of human activities and provide important insights into the origin and evolution of antibiotic resistance integrons.},
 author = {Petrova, Mayya and Gorlenko, Zhosephine and Mindlin, Sofia},
 year = {2011},
 title = {Tn5045, a novel integron-containing antibiotic and chromate resistance transposon isolated from a permafrost bacterium},
