 year = {2019},
 title = {A model to predict the function of hypothetical proteins through a nine-point classification scoring schema},
 pages = {14},
 volume = {20},
 number = {1},
 journal = {BMC bioinformatics},
 doi = {10.1186/s12859-018-2554-y},
 file = {Ijaq, Malik et al. 2019 - A model to predict:Attachments/Ijaq, Malik et al. 2019 - A model to predict.pdf:application/pdf}
