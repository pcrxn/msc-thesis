 keywords = {macrolides;manufacturing facility},
 pages = {501--511},
 volume = {123},
 journal = {Environment international},
 doi = {10.1016/j.envint.2018.12.050},
 file = {Milakovi{\'c}, Vestergaard et al. 2019 - Pollution from azithromycin-manufacturing promotes macrolide-resistance:Attachments/Milakovi{\'c}, Vestergaard et al. 2019 - Pollution from azithromycin-manufacturing promotes macrolide-resistance.pdf:application/pdf}
