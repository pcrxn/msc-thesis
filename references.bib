 pages = {10931},
 volume = {8},
 number = {1},
 journal = {Scientific reports},
 doi = {10.1038/s41598-018-29334-5},
 file = {Tyler, Mataseje et al. 2018 - Evaluation of Oxford Nanopore's MinION:Attachments/Tyler, Mataseje et al. 2018 - Evaluation of Oxford Nanopore's MinION.pdf:application/pdf}
