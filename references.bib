 pages = {110--118},
 volume = {252},
 number = {Pt A},
 journal = {Environmental pollution (Barking, Essex : 1987)},
 doi = {10.1016/j.envpol.2019.05.078},
 file = {Hu, Wang et al. 2019 - Effects of inoculation with lignocellulose-degrading:Attachments/Hu, Wang et al. 2019 - Effects of inoculation with lignocellulose-degrading.pdf:application/pdf}
