 keywords = {gene cassette sequencing;integrons;MGEs;wastewater},
 pages = {681--691},
 volume = {12},
 number = {3},
 journal = {The ISME journal},
 doi = {10.1038/s41396-017-0030-8},
 file = {Amos, Ploumakis et al. 2018 - The widespread dissemination of integrons:Attachments/Amos, Ploumakis et al. 2018 - The widespread dissemination of integrons.pdf:application/pdf}
