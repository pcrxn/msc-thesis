 year = {2018},
 title = {A reservoir of 'historical' antibiotic resistance genes in remote pristine Antarctic soils},
 pages = {40},
 volume = {6},
 number = {1},
 journal = {Microbiome},
 doi = {10.1186/s40168-018-0424-5},
 file = {van Goethem, Pierneef et al. 2018 - A reservoir of 'historical' antibiotic:Attachments/van Goethem, Pierneef et al. 2018 - A reservoir of 'historical' antibiotic.pdf:application/pdf}
