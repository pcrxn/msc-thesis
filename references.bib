 journal = {Environmental pollution (Barking, Essex : 1987)},
 doi = {10.1016/j.envpol.2021.116733},
 file = {Hutinel, Fick et al. 2021 - Investigating the effects of municipal:Attachments/Hutinel, Fick et al. 2021 - Investigating the effects of municipal.pdf:application/pdf}
