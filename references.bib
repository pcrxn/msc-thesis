 year = {2019},
 title = {Meta-transcriptomics reveals a diverse antibiotic resistance gene pool in avian microbiomes},
 pages = {31},
 volume = {17},
 number = {1},
 journal = {BMC biology},
 doi = {10.1186/s12915-019-0649-1},
 file = {Marcelino, Wille et al. 2019 - Meta-transcriptomics reveals a diverse antibiotic:Attachments/Marcelino, Wille et al. 2019 - Meta-transcriptomics reveals a diverse antibiotic.pdf:application/pdf}
