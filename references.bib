@article{Blanchard.2018,
 abstract = {In this issue of Molecular Cell, Pantel et~al. (2018) identify and synthetically optimize a novel ribosome-targeting antimicrobial from a potentially rich new source of bioactive natural products.},
 author = {Blanchard, Scott C.},
