 journal = {Environment international},
 doi = {10.1016/j.envint.2020.105796},
 file = {Booth, Aga et al. 2020 - Retrospective analysis of the global:Attachments/Booth, Aga et al. 2020 - Retrospective analysis of the global.pdf:application/pdf}
}


