 year = {2020},
 title = {Long-term application of Swedish sewage sludge on farmland does not cause clear changes in the soil bacterial resistome},
 pages = {105339},
 volume = {137},
 journal = {Environment international},
 doi = {10.1016/j.envint.2019.105339},
 file = {Rutgersson, Ebmeyer et al. 2020 - Long-term application of Swedish sewage:Attachments/Rutgersson, Ebmeyer et al. 2020 - Long-term application of Swedish sewage.pdf:application/pdf}
}


