 doi = {10.1186/s12864-020-06830-5},
 file = {Buongermino Pereira, {\"O}sterlund et al. 2020 - A comprehensive survey of integron-associated:Attachments/Buongermino Pereira, {\"O}sterlund et al. 2020 - A comprehensive survey of integron-associated.pdf:application/pdf}
