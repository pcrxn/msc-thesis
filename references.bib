 year = {2019},
 title = {The impact of sequencing depth on the inferred taxonomic composition and AMR gene content of metagenomic samples},
 pages = {7},
 volume = {14},
 number = {1},
 journal = {Environmental microbiome},
 doi = {10.1186/s40793-019-0347-1},
 file = {Gweon, Shaw et al. 2019 - The impact of sequencing depth:Attachments/Gweon, Shaw et al. 2019 - The impact of sequencing depth.pdf:application/pdf}
