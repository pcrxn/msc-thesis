 title = {Pharmaceuticals and personal care products in archived U.S. biosolids from the 2001 EPA National Sewage Sludge Survey},
 keywords = {biosolids},
 pages = {658--668},
 volume = {44},
 number = {2},
 journal = {Water research},
 doi = {10.1016/j.watres.2009.12.032},
