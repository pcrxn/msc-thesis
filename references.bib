 issn = {1664-302X},
 journal = {Frontiers in microbiology},
 doi = {10.3389/fmicb.2013.00138},
 file = {Perry, Wright 2013 - The antibiotic resistance mobilome:Attachments/Perry, Wright 2013 - The antibiotic resistance mobilome.pdf:application/pdf}
}


