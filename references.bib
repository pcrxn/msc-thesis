 year = {2020},
 title = {Chlorine disinfection promotes the exchange of antibiotic resistance genes across bacterial genera by natural transformation},
 pages = {1847--1856},
 volume = {14},
 number = {7},
 journal = {The ISME journal},
 doi = {10.1038/s41396-020-0656-9},
 file = {Jin, Liu et al. 2020 - Chlorine disinfection promotes the exchange:Attachments/Jin, Liu et al. 2020 - Chlorine disinfection promotes the exchange.pdf:application/pdf}
