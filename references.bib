 pages = {41},
 volume = {8},
 number = {1},
 journal = {Microbiome},
 doi = {10.1186/s40168-020-00814-z},
 file = {B{\"o}hm, Razavi et al. 2020 - Discovery of a novel integron-borne:Attachments/B{\"o}hm, Razavi et al. 2020 - Discovery of a novel integron-borne.pdf:application/pdf}
}


