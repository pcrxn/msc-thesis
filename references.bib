 year = {2007},
 title = {Genetic diversity among Botulinum Neurotoxin-producing clostridial strains},
 pages = {818--832},
 volume = {189},
 number = {3},
 issn = {0021-9193},
 journal = {Journal of bacteriology},
 doi = {10.1128/JB.01180-06},
 file = {Hill, Smith et al. 2007 - Genetic diversity among Botulinum Neurotoxin-producing:Attachments/Hill, Smith et al. 2007 - Genetic diversity among Botulinum Neurotoxin-producing.pdf:application/pdf}
