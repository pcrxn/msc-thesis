 year = {2019},
 title = {The impact and mechanism of quaternary ammonium compounds on the transmission of antibiotic resistance genes},
 pages = {28352--28360},
 volume = {26},
 number = {27},
 journal = {Environmental science and pollution research international},
 doi = {10.1007/s11356-019-05673-2},
 file = {Han, Zhou et al. 2019 - The impact and mechanism:Attachments/Han, Zhou et al. 2019 - The impact and mechanism.pdf:application/pdf}
